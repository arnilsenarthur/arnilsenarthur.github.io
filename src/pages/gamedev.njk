<!--Home-->
<div class="content" page="">
    <div class="landing-section">
        <div class="landing-header">
            <div class="landing-avatar">
                <img src="{{ gamedev.avatar }}" class="landing-profile-image" alt="{{ gamedev.name }}">
            </div>
            <div class="landing-text-content">
                <div class="landing-title-group">
                    <h1 class="landing-title">Hi, I'm <span class="highlight">{{ gamedev.name }}</span></h1>
                    <p class="landing-subtitle">{{ gamedev.tagline }}</p>
                </div>
            </div>
        </div>

        <div class="landing-content">
            {% for paragraph in gamedev.bio %}
            <p>{{ paragraph | safe }}</p>
            {% endfor %}
        </div>

        <div class="landing-footer">
            <div class="action-buttons">
                <button class="contact inverse full" onclick="location.href='#contact'"><i data-lucide="mail" class="side"></i>Contact me</button>
                <button class="play full" onclick="location.href='#game'"><i data-lucide="play" class="side"></i>Play a Game!</button>
            </div>
            <div class="quick-stats">
                {% for highlight in gamedev.highlights %}
                <div class="stat-item">
                    <div class="stat-number">{{ highlight.split(' ')[0] }}</div>
                    <div class="stat-label">{{ highlight.split(' ').slice(1).join(' ') }}</div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<!--Contacts-->
<div class="content" page="contact">
    <div class="contact-section">
        <div class="contact-header">
            <h2 class="contact-title">{{ personal.contact.title }}</h2>
            <p class="contact-subtitle">{{ personal.contact.subtitle }}</p>
        </div>

        <div class="contact-links">
            {% for link in personal.contact.links %}
            <div class="contact-card" onclick="{% if link.url and link.url.indexOf('mailto:') === 0 %}window.open('{{ link.url }}','_self'){% else %}window.open('{{ link.url }}','_blank'){% endif %}">
                <div class="contact-icon">
                    <i class="fa {{ link.icon }}"></i>
                </div>
                <div class="contact-content">
                    <div class="contact-text">{{ link.text }}</div>
                    <div class="contact-description">{{ link.description }}</div>
                </div>
                <div class="contact-arrow">
                    <i data-lucide="external-link"></i>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="contact-footer">
            <button class="red full" onclick="location.href='#'">
                <i data-lucide="arrow-left" class="side"></i>
                Back to Portfolio
            </button>
        </div>
    </div>
</div>

