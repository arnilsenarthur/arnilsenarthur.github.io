<!--Projects-->
<div class="content" page="projects">
    <h2>Game Development Projects</h2>

    <!-- Filter Buttons -->
    <div class="project-filters">
        <button class="filter-btn active" data-filter="all">All</button>

        {% set allTags = [] %}
        {% for project in gamedev.projects %}
            {% if project.tags %}
                {% for tag in project.tags %}
                    {% set allTags = allTags.concat([{name: tag.name, type: tag.type}]) %}
                {% endfor %}
            {% endif %}
        {% endfor %}

        {% set uniqueTags = [] %}
        {% for tag in allTags %}
            {% set tagExists = false %}
            {% for existingTag in uniqueTags %}
                {% if existingTag.name == tag.name %}
                    {% set tagExists = true %}
                {% endif %}
            {% endfor %}
            {% if not tagExists %}
                {% set uniqueTags = uniqueTags.concat([tag]) %}
            {% endif %}
        {% endfor %}

        {% set sortedTags = uniqueTags | sort(attribute='type') %}
        {% for tag in sortedTags %}
        <button class="filter-btn" data-filter="{{ tag.name | lower | replace(' ', '-') }}">{{ tag.name }}</button>
        {% endfor %}
    </div>

    {% for project in gamedev.projects %}
    <div class="project-item" data-tags="{% if project.tags %}{% for tag in project.tags %}{{ tag.name | lower | replace(' ', '-') }}{% if not loop.last %},{% endif %}{% endfor %}{% endif %}" style="display: block;">
        <div class="project-card">
            <div class="project-header">
                <div class="project-title-section">
                    <h3 class="project-title">
                        {% if project.url %}
                        <a href="{{ project.url }}" target="_blank">{{ project.title }}
                        </a>
                        {% else %}
                        {{ project.title }}
                        {% endif %}
                    </h3>
                    {% if project.subtitle %}
                    <p class="project-subtitle">{{ project.subtitle }}</p>
                    {% endif %}
                </div>
                {% if project.tags %}
                <div class="project-tech">
                    {% for tag in project.tags %}
                    <span class="tech-tag" data-type="{{ tag.type }}">
                        {{ tag.name }}
                    </span>
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            {% if project.images %}
            <div class="project-gallery">
                {% for image in project.images %}
                <img src="{{ image }}" class="project-image" alt="{{ project.title }}">
                {% endfor %}
            </div>
            {% elif project.thumbnail %}
            <div class="project-gallery">
                <img src="{{ project.thumbnail }}" class="project-image" alt="{{ project.title }}">
            </div>
            {% endif %}

            <div class="project-content">
                {% if project.description %}
                {% for desc in project.description %}
                <p class="project-description">{{ desc | safe }}</p>
                {% endfor %}
                {% else %}
                <p class="project-description">{{ project.description }}</p>
                {% endif %}

                {% if project.achievements %}
                <div class="project-achievements">
                    <h4>Key Achievements:</h4>
                    <ul>
                        {% for achievement in project.achievements %}
                        <li>{{ achievement }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>

            {% if project.url %}
            <div class="project-actions">
                <button class="red" onclick="window.open('{{ project.url }}', '_blank')">
                    <i data-lucide="external-link"></i>
                    View Project
                </button>
            </div>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>

