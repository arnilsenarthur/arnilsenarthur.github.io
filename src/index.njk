<!--Projects-->
<div class="content" page="projects">
    <h2>Projects</h2>

    <!-- Filter Buttons -->
    <div class="project-filters">
        <button class="filter-btn active" data-filter="all">All</button>
        {% set projects = (gamedev.projects or []) %}
        {% for project in dev.projects or [] %}
            {% set projects = projects.concat([project]) %}
        {% endfor %}
        {% set filterTags = [] %}
        {% for project in projects %}
            {% if project.tags %}
                {% for tag in project.tags %}
                    {% if tag.type %}
                        {% if tag.text[0] != '!' %}
                            {% set filterTags = filterTags.concat([tag.text]) %}
                        {% endif %}
                    {% else %}
                        {% if tag[0] != '!' %}
                            {% set filterTags = filterTags.concat([tag]) %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
        {% set uniqueFilterTags = [] %}
        {% for tag in filterTags %}
            {% if tag not in uniqueFilterTags %}
                {% set uniqueFilterTags = uniqueFilterTags.concat([tag]) %}
            {% endif %}
        {% endfor %}
        {% for tag in uniqueFilterTags %}
        <button class="filter-btn" data-filter="{{ tag | lower | replace(' ', '-') }}">{{ tag }}</button>
        {% endfor %}
    </div>

    {% for project in projects %}
    <div class="project-item" data-tags="{% if project.tags %}{% for tag in project.tags %}{% if tag.type %}{{ tag.text | lower | replace(' ', '-') }}{% else %}{{ tag | lower | replace(' ', '-') }}{% endif %}{% if not loop.last %},{% endif %}{% endfor %}{% endif %}" style="display: block;">
        <div class="project-card">
            <div class="project-header">
                <div class="project-title-section">
                    <h3 class="project-title">
                        {% if project.url %}
                        <a href="{{ project.url }}" target="_blank">{{ project.title }}
                        </a>
                        {% else %}
                        {{ project.title }}
                        {% endif %}
                    </h3>
                    {% if project.subtitle %}
                    <p class="project-subtitle">{{ project.subtitle }}</p>
                    {% endif %}
                </div>
                {% if project.tags %}
                <div class="project-tech">
                    {% for tag in project.tags %}
                    {% if tag.type %}
                    <span class="tech-tag {{ tag.type }}">
                        {% if tag.text[0] == '!' %}
                            {{ tag.text | slice(1) }}
                        {% else %}
                            {{ tag.text }}
                        {% endif %}
                    </span>
                    {% else %}
                    <span class="tech-tag">
                        {% if tag[0] == '!' %}
                            {{ tag | slice(1) }}
                        {% else %}
                            {{ tag }}
                        {% endif %}
                    </span>
                    {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            {% if project.images %}
            <div class="project-gallery">
                {% for image in project.images %}
                <img src="{{ image }}"
                     class="project-image"
                     alt="{{ project.title }}"
                     loading="lazy">
                {% endfor %}
            </div>
            {% elif project.thumbnail %}
            <div class="project-gallery">
                <img src="{{ project.thumbnail }}"
                     class="project-image"
                     alt="{{ project.title }}"
                     loading="lazy">
            </div>
            {% endif %}

            <div class="project-content">
                {% if project.description %}
                {% for desc in project.description %}
                <p class="project-description">{{ desc | safe }}</p>
                {% endfor %}
                {% else %}
                <p class="project-description">{{ project.description }}</p>
                {% endif %}

                {% if project.achievements %}
                <div class="project-achievements">
                    <h4>Key Achievements:</h4>
                    <ul>
                        {% for achievement in project.achievements %}
                        <li>{{ achievement }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endfor %}
</div>